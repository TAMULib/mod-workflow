{
  "$schema" : "http://json-schema.org/draft-04/schema#",
  "title" : "Trigger",
  "type" : "object",
  "additionalProperties" : false,
  "properties" : {
    "id" : {
      "type" : "string"
    },
    "name" : {
      "type" : "string",
      "minLength" : 4,
      "maxLength" : 64
    },
    "description" : {
      "type" : "string",
      "maxLength" : 256
    },
    "pathPattern" : {
      "type" : "string",
      "minLength" : 2,
      "maxLength" : 256
    },
    "method" : {
      "type" : "string",
      "enum" : [ "GET", "HEAD", "POST", "PUT", "PATCH", "DELETE", "OPTIONS", "TRACE" ]
    }
  },
  "required" : [ "name", "pathPattern", "method" ]
}