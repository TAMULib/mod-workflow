    },
    {
      "permissionName": "workflow.workflows.item.put",
      "displayName": "Workflow - put workflow item",
      "description": "Update workflow item"
    },
    {
      "permissionName": "workflow.workflows.item.patch",
      "displayName": "Workflow - patch workflow item",
